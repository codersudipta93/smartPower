    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:background="@color/white">

        <!-- Date Filter Row - From and To dates -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Date Time Range Selection - Side by Side -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

                <!-- From DateTime -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From DateTime"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:fontFamily="@font/gilroy_medium"
                        android:paddingBottom="8dp"/>

                    <LinearLayout
                        android:id="@+id/fromDateTimeRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="@drawable/bg_rounded_border">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="#333333"/>

                        <TextView
                            android:id="@+id/tvFromDateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="2025-04-01 13:00"
                            android:textSize="13sp"
                            android:textColor="#333333"
                            android:fontFamily="@font/gilroy_medium"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- To DateTime -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="8dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To DateTime"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:fontFamily="@font/gilroy_medium"
                        android:paddingBottom="4dp"/>

                    <LinearLayout
                        android:id="@+id/toDateTimeRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="@drawable/bg_rounded_border">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="#333333"/>

                        <TextView
                            android:id="@+id/tvToDateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="2025-04-01 13:00"
                            android:textSize="13sp"
                            android:textColor="#333333"
                            android:fontFamily="@font/gilroy_medium"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

