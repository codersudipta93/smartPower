<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    >

    <TextView
        android:id="@+id/tvActivationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Activation Code"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@id/etActivationCode"

        />

    <EditText
        android:id="@+id/etActivationCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Activation Code"
        android:inputType="text"
        android:textSize="@dimen/_14sdp"
        android:text=""
        android:textColor="@color/text_color_dark"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:background="@drawable/bg_email_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/tvActivationTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@id/btnSubmitCode"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmitCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:cornerRadius="@dimen/_10sdp"
        android:textSize="@dimen/_14sdp"
        android:paddingVertical="@dimen/_2sdp"
        app:layout_constraintStart_toStartOf="@id/etActivationCode"
        app:layout_constraintEnd_toEndOf="@id/etActivationCode"
        app:layout_constraintTop_toBottomOf="@id/etActivationCode"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/_10sdp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>